@model fa22Team16.Models.StockTransaction

@{
    ViewData["Title"] = "Purchase Stock";
}

<h1>Purchase Stock</h1>

<h2>Stocks Available for Purchase</h2>
<!--
Table of Stocks
[stock name] [stock ticker symbol] [type of stock] [current share price] [fess (if any)]
-->
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Stock.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock.Ticker)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock.StockType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock.Price)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Stock)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
            </tr>
        }
    </tbody>
</table>


<!--Stock Purchasing Form-->
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumberOfShares" class="control-label"></label>
                <input asp-for="NumberOfShares" class="form-control" />
                <span asp-validation-for="NumberOfShares" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

