@model fa22Team16.Models.Transaction

@{
    ViewData["Title"] = "ManageDeposit";
}

<h1>Approve Deposits</h1>

<h4>when deposit > 5000</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ManageDeposit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TransactionID" />
            <div class="form-group">
                <label asp-for="Approved" class="control-label"></label>
                <input type="radio" class="radio" asp-for="Approved" value="@Approved.Yes"  /> Yes<br />
                <input type="radio" class="radio" asp-for="Approved" value="@Approved.No" checked="checked"/> No<br />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

